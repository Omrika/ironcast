	<%= form_for @hangout do |f| %>
		<p><%= f.text_field :name, :placeholder => "Your name" %>
		<span>wants to</span>
		<%= f.text_field :description, :placeholder => "do this thing", rows: 1 %>
		<span>at</span>
		<%= f.select :hours, '1'..'12' %>
		<%= f.select :minutes, ['00', '15', '30','45'] %>
		<%= f.select :meridiem, ['AM','PM'] %>
		<%= f.submit :class => 'btn btn-primary btn-lg', :value => "Create Hangout" %></p>
	<% end %>
